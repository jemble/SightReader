<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context=".SetSongDetailsActivity" >

    <TextView
        android:id="@+id/setSongs_txtView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:text="@string/name" />
    
    <EditText
        android:id="@+id/setSongs_editTxt_name"
        android:layout_below="@id/setSongs_txtView_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:inputType="text"
        android:text="@string/my_song_name"
        android:textSize="24sp"/>
    
    <TextView
        android:id="@+id/setSongs_txtView_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_below="@id/setSongs_editTxt_name"
        android:layout_marginTop="48dp"
        android:text="@string/tempo" />

    <EditText
        android:id="@+id/setSongs_editTxt_tempo"
        android:layout_below="@id/setSongs_txtView_tempo"
        android:layout_alignParentRight="true"
        android:layout_width="96sp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:inputType="number"
        android:text="@string/one_hundred_twenty"
        android:textSize="24sp"/>
    
    <Button 
        android:id="@+id/setSongs_btn_camera"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="btnCameraClicked"
        android:background="@drawable/button_camera_layout"/>
   

</RelativeLayout>
